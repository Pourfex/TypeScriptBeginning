{
  "name": "frontend-projects",
  "version": "1.0.0",
  "description": "JavaScript and TypeScript Hello World projects",
  "main": "index.js",
  "scripts": {
    "build:ts": "cd typescript && tsc",
    "build:ts:watch": "cd typescript && tsc --watch",
    "serve:js": "cd javascript && http-server -p 3000 -o",
    "serve:ts": "cd typescript && http-server -p 3001 -o",
    "start:js": "npm run serve:js",
    "start:ts": "npm run build:ts && npm run serve:ts",
    "start:both": "concurrently \"npm run serve:js\" \"npm run build:ts && npm run serve:ts\"",
    "dev:ts": "concurrently \"npm run build:ts:watch\" \"npm run serve:ts\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "javascript",
    "typescript",
    "hello-world"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
